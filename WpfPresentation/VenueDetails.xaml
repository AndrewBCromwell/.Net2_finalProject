<Window x:Class="WpfPresentation.VenueDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPresentation"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        Title="VenueDetails" Height="300" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <Label x:Name="lblVenueName" FontSize="20" Grid.Row="0" HorizontalAlignment="Center"></Label>
        <TextBlock x:Name="txtTermsOfUse" Grid.Row="1" FontSize="20" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Margin="20"></TextBlock>
        <Label x:Name="lblPhoneNumber" FontSize="20" Grid.Row="2" HorizontalAlignment="Center"></Label>
    </Grid>
</Window>
